<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorGray"
    android:layout_height="match_parent"
    tools:context=".auth.CodeVerificationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_marginTop="200dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/pas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the code sent:"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/enter_signup_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawableStart="@drawable/ic_create"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/pas"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="code"/>
        <Button
            android:id="@+id/confirm_signup_code"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:text="confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_signup_code"
            android:layout_marginTop="25dp"
            android:background="@drawable/button"/>
        <ImageView
            android:id="@+id/resendCodeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="43dp"
            android:src="@drawable/ic_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_signup_code"/>
        <TextView
            android:id="@+id/resendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="Resend code"
            app:layout_constraintStart_toEndOf="@+id/resendCodeImageView"
            app:layout_constraintTop_toBottomOf="@id/confirm_signup_code"/>
        <include layout="@layout/content_progress_bar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

